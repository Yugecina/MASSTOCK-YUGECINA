# E2E Test Environment Configuration
# Copy this file to .env.test and fill in your test credentials

# API URL
API_URL=http://localhost:3000

# Test User Credentials
# Create a dedicated test user in your Supabase auth.users table
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# Supabase Configuration
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Gemini API (for E2E tests using real API)
GEMINI_API_KEY=your-gemini-api-key-here

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-test-jwt-secret-here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=test

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting (higher limits for E2E tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug

# E2E Test Configuration
SKIP_E2E_TESTS=false
